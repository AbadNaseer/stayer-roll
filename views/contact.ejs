            <script>
                function isValidEmail(email) {
                    const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    return regex.test(email);
                }

                function isValidPhoneNumber(phone) {
                    const regex = /^\+966[0-9]{9}$/; // Assuming the format is +966 followed by 9 digits
                    return regex.test(phone);
                }

                document.getElementById("contact-form").addEventListener("submit", function (event) {
                    const email = document.getElementById("contact-email").value;
                    const phone = document.getElementById("contact-phone").value;

                    if (!isValidEmail(email)) {
                        event.preventDefault();
                        document.getElementById("error-message").innerText = "Invalid email address!";
                    } else if (!isValidPhoneNumber(phone)) {
                        event.preventDefault();
                        document.getElementById("error-message").innerText = "Invalid phone number! Phone number should be look like +966331766152";
                    }
                });
